{
    "version": 2,
    "builds": [
      {
        "src": "index.html",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/(.*\\.(css|js))",  
        "dest": "/$1"               
      },
      {
        "src": "/(.*)",             
        "dest": "/index.html"       
      }
    ],
    "public": [
      "style.css",
      "script.js"
    ]
  }